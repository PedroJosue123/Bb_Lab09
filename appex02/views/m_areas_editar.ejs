<html>
   <head>
      <title>Sistema de control de Ingreso</title>
   </head>
   <body>
      <h1>Editar areas</h1>
   <hr>
   <form action="/m_areas_grabar_editar" method="POST">
      <input type="text" hidden name="xid" id="xid" value="<%= area._id %>">
      <table>
         <tr>
            <td>Nombre:</td>
            <td><input type="text" name="xnom" id="xnom" size="30" value="<%= area.Nombre %>"></td>
         </tr>
         <tr>
            <td>Abreviatura:</td>
            <td><input type="text" name="xabre" id="xabre" size="5" value="<%= area.Abreviatura %>"></td>
         </tr>
         <tr>
            <td>Estado:</td>
            <td><input type="text" name="xest" id="xest" size="30" value="<%= area.Estado %>"></td>
         </tr>
         <td></td>
            <td><input type="submit" value="Grabar"></td>
            </tr>
         </table>
   </form>
   </body>
</html>
